<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<addon id="plugin.program.pvr.playlist.helper" name="PVR Playlist Helper" version="1.0.7" provider-name="HarryDoubleG">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.garepobg" version="0.1.5"/>
    <import addon="script.module.requests" version="2.22.0"/>
    <import addon="script.module.bottle" version="0.12.18"/>
    <import addon="script.module.web-pdb" optional="true" version="1.5.6" />
  </requires>
  <extension point="xbmc.python.script" library="exec.py"/>
  <extension point="xbmc.service" library="service.py" start="start" />
  <extension point="xbmc.addon.metadata">
        <summary>PVR Playlist Helper</summary>
        <summary lang="en">PVR Playlist Helper</summary>
        <description lang="en">Scheduled loading playlist from local or remote resource. 
        Replaces values in streams with values from predefined map, or adds new values
        Replaces dynamic stream urls with static ones.</description>
        <language>en</language>
        <platform>all</platform>
        <forum>https://kodibg.org/forum/</forum>
        <website>https://github.com/harrygg/plugin.program.pvr.playlist.helper</website>
  </extension>
</addon>
